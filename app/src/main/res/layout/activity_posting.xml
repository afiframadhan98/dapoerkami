<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.dapoerkami.com.dapoerkami.PostingActivity">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:id="@+id/iv_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="#FF339966"
        android:text="Ambil Gambar" />

    <EditText
        android:id="@+id/edt_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Judul Resep"/>

    <EditText
        android:id="@+id/et_bahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Bahan-bahan"/>

    <EditText
        android:id="@+id/et_cara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Cara Memasak"/>

    <Button
        android:id="@+id/btn_unggah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unggah"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="#FF339966"/>

</LinearLayout>
